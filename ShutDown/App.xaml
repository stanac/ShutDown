<Application
    x:Class="ShutDown.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:ShutDown.Converters"
    xmlns:local="clr-namespace:ShutDown"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/ThemesDefault.xaml" />
                <ResourceDictionary Source="Resources/Themes/Styles/Style.xaml" />

            </ResourceDictionary.MergedDictionaries>


            <converters:OperationToColorConverter x:Key="OperationToColorConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        </ResourceDictionary>

    </Application.Resources>
</Application>
